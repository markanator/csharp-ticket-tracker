@using TheBugTracker.ViewModels

@model AssignDeveloperViewModel

<div class="container">
    <h2>Assign a Developer for:</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.Ticket.Title</h3>
            <a style="font-size:small;" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">@Model.Ticket.Project.Name</a>

            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign developer</label>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                        <input type="hidden" asp-for="Ticket.Id" />
                        <p>Description: @Model.Ticket.Description</p>

                        <div class="">
                            <div class="form-group">
                                <label>Select Developers:</label>
                                <select required asp-for="DeveloperId" class="form-control"
                                    asp-items="@Model.Developers"
                                >
                                <option>--- Select Developer ---</option>
                            </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type='submit' class="btn alert-primary" value="Assign Developers" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <div class="col-md-6"></div>
    </div>

    <div>
        <a asp-action="UnassignedTickets" asp-controller="Tickets">Back to Unassigned Tickets</a>
    </div>
</div>