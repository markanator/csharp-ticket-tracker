@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="row g-1 p-0 p-md-4">
    <div class="col-12 text-center mb-4">
        <h1>Sign in</h1>
        <span>Free demo access to our dashboard.</span>
    </div>
    <div class="col-12 text-center mb-2">
        <a class="btn btn-lg btn-outline-secondary btn-block"
           asp-area="Identity" asp-page="/Account/DemoLogin">
            <span class="d-flex justify-content-center align-items-center">
                <i class="bi bi-person-badge xs me-2"></i>
                Demo Sign In
            </span>
        </a>
        <span class="dividers text-muted mt-4">OR</span>
    </div>
    <form id="account" method="post">
        <div class="col-12">
            <div class="mb-2">
                <label class="form-label">Email address</label>
                <input type="email"
                       asp-for="Input.Email"
                       class="form-control form-control-lg"
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger" style="text-decoration: none"></span>

            </div>
        </div>
        <div class="col-12">
            <div class="mb-2">
                <div class="form-label">
                    <span class="d-flex justify-content-between align-items-center">
                        Password
                        <a class="text-primary" asp-page="./ForgotPassword">Forgot Password?</a>
                    </span>
                </div>
                <input type="password" asp-for="Input.Password" class="form-control form-control-lg" id="signin-password" placeholder="***************" />

                <span asp-validation-for="Input.Password" class="text-danger" style="text-decoration: none"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" />
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
            </div>
        </div>
        <div class="col-12 text-center mt-4">
            <button type="submit"
                    class="btn btn-lg btn-block btn-dark lift text-uppercase">
                SIGN IN
            </button>
        </div>
    </form>
    <div class="col-12 text-center mt-4">
        <span class="text-muted">
            Don't have an account yet?
            <a asp-page="./Register">Sign up here</a>
        </span>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
